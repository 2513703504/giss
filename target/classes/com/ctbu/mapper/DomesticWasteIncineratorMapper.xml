<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--mapper命名空间，必须配置属性，已存在Mapper接口的全类名-->
<mapper namespace="com.ctbu.mapper.DomesticWasteIncineratorMapper">
    <!--显示所有环卫公司-->
    <select id="getAllDwi" resultMap="dwi">
        select * from domestic_waste_incinerator
    </select>

    <select id="getDwiByPage" resultMap="dwi">
        select * from domestic_waste_incinerator
    </select>

    <select id="getDwiDetail" resultMap="dwiDetail">
        select * from (select sc.id sc_id,sc.sc_number,dwi.id id,dwi.dwi_name,dwi.dwi_address,dwi.dwi_area,dwi.lng,dwi.lat from sanitation_car sc INNER JOIN domestic_waste_incinerator dwi on sc.dwi_id=dwi.id) as temp where  temp.id=#{id}
    </select>
    <resultMap id="dwi" type="DomesticWasteIncinerator" autoMapping="true">
        <id property="id" column="id"></id>
        <result property="dwiName" column="dwi_name"></result>
        <result property="dwiAddress" column="dwi_address"></result>
        <result property="dwiArea" column="dwi_area"></result>
        <result property="lng" column="lng"></result>
        <result property="lat" column="lat"></result>
    </resultMap>

    <resultMap id="dwiDetail" type="DomesticWasteIncinerator">
        <id property="id" column="id"></id>
        <result property="dwiName" column="dwi_name"></result>
        <result property="dwiAddress" column="dwi_address"></result>
        <result property="dwiArea" column="dwi_area"></result>
        <result property="lng" column="lng"></result>
        <result property="lat" column="lat"></result>
        <collection property="cars" ofType="SanitationCar" autoMapping="true">
            <result property="id" column="sc_id"></result>
            <result property="scNumber" column="sc_number"></result>
        </collection>
    </resultMap>
</mapper>